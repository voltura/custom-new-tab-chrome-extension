{
	"name": "Open custom new tab",
	"version": "0.1.0.0",
	"description": "Press Ctrl + X to open a custom page in a new tab. Bypasses any corporate GPO's that forces new tabs to load a specific page.",
	"background": {
		"service_worker": "service-worker.js"
	},
	"commands": {
		"open_custom_tab": {
			"suggested_key": {
				"default": "Ctrl+X"
			},
			"description": "Open a custom new tab"
		}
	},
	"optional_host_permissions": [
		"https://*/*",
		"http://*/*"
	],
	"icons": {
		"32": "favicon.png",
		"128": "128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Custom Tab"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"css/*",
				"*"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"permissions": [
		"storage"
	],
	"manifest_version": 3
}